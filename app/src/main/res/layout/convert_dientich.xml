<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/muoi_dp">

    <TextView
        android:layout_marginLeft="@dimen/hai_muoi_dp"
        android:layout_marginRight="@dimen/hai_muoi_dp"
        android:text="@string/from"
        android:textSize="@dimen/ba_muoi_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_margin="@dimen/hai_muoi_dp"
        android:inputType="phone"
        android:id="@+id/edt_top_dientich"
        android:textSize="@dimen/ba_muoi_sp"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginLeft="@dimen/hai_muoi_dp"
        android:layout_marginRight="@dimen/hai_muoi_dp"
        android:entries="@array/convert_dientich"
        android:id="@+id/spinner_top_dientich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/hai_muoi_dp"
        android:layout_marginLeft="@dimen/hai_muoi_dp"
        android:layout_marginRight="@dimen/hai_muoi_dp"
        android:text="@string/to"
        android:textSize="@dimen/ba_muoi_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="@dimen/hai_muoi_dp"
        android:id="@+id/tv_bottom_dientich"
        android:textSize="@dimen/ba_muoi_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginLeft="@dimen/hai_muoi_dp"
        android:layout_marginRight="@dimen/hai_muoi_dp"
        android:entries="@array/convert_dientich"
        android:id="@+id/spinner_bottom_dientich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_convert_dientich"
            android:text="@string/convert"
            android:layout_margin="@dimen/hai_muoi_dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_cancel_dientich"
            android:text="@string/cancel"
            android:layout_margin="@dimen/hai_muoi_dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>