                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/hai_tu_sp"
                    android:layout_marginRight="@dimen/mot_dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/bg_btn"
                    android:text="@string/one_button" />
                <Button
                    android:layout_margin="@dimen/mot_dp"
                    android:id="@+id/two_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/hai_tu_sp"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/mot_dp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/bg_btn"
                    android:text="@string/two_button" />
                <Button
                    android:layout_margin="@dimen/mot_dp"
                    android:id="@+id/three_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/hai_tu_sp"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/mot_dp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/bg_btn"
                    android:text="@string/three_button" />
                <Button
                    android:layout_margin="@dimen/mot_dp"
                    android:id="@+id/addition"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/hai_tu_sp"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/mot_dp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/bg_btn"
                    android:text="@string/addition" />
                <Button
                    android:layout_margin="@dimen/mot_dp"
                    android:id="@+id/subtraction"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/hai_tu_sp"
                    android:textAllCaps="false"
                    android:layout_marginRight="@dimen/mot_dp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/bg_btn"
                    android:text="@string/subtraction" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></LinearLayout>
            <!--Twelve Row 5 Buttons-->
            <LinearLayout
                android:id="@+id/twelve_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <Button
